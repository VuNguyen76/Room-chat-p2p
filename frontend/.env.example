# API Configuration
# Development: use localhost
VITE_API_URL=http://localhost:5000
VITE_SOCKET_URL=http://localhost:5000

# Production: leave empty to use same origin (relative URLs)
# VITE_API_URL=
# VITE_SOCKET_URL=

# App Configuration
VITE_APP_NAME=ERP Video Chat Room
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug

# Production Configuration (for .env.production)
# VITE_DEV_MODE=false
# VITE_LOG_LEVEL=error

# WebRTC Configuration
VITE_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
